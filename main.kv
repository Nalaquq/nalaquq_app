#: import MapView kivy_garden.mapview

#MainWidget: 
WindowManager: 
	SplashScreen: 
	MainPage: 
	Map:
	Weather:  
	SAR: 

<SplashScreen>:
	name: "SplashScreen" 

	AnchorLayout: 

	Image: 
		source: 'assets/nalaquq_logo.png'

	Image:
		source: 'assets/nalaquq_background.png'
		allow_stretch: True
		keep_ratio: False 
		
	BoxLayout: 
		orientation: "vertical"
		Image: 
			source: 'assets/nalaquq_logo.png'  
		Button: 
			text: "Login"
			size_hint: .3, .1
			# x, center_x, right
			# y, center_y, top
			pos_hint: {"center_x": .5}
			on_release: app.root.current='MainPage'  
						
<MainPage>: 
	name: "MainPage"	
	AnchorLayout: 
	Image:
		source: 'assets/nalaquq_background.png'
		allow_stretch: True
		keep_ratio: False  
	
	GridLayout: 
		#specify number of rows and cols 
		cols: 2 
		rows: 3
		row_default_height: '100dp'
		row_force_default: True 
		spacing: 10, 10 
		padding: 20, 20 
		#centers grid layout to middle of screen. 
		size_hint_y: .75 
		height: self.minimum_height 

		Button: 
			text: "Register an Aircraft" 
			size_hint: .1, .1
			on_release: app.root.current="Map"

		Button: 
			text: "Check Weather" 
			size_hint: .1, .1 
			on_release: app.root.current="Weather"
 
		Button: 
			text: "Plan a Mission" 
			size_hint: .1, .1 
			on_release: app.root.current="Map"
  
		Button: 
			text: "View Maps" 
			size_hint: .1, .1
			on_release: app.root.current="Map"

		Button: 
			text: "SAR Detection" 
			size_hint: .1, .1 
			on_release: app.root.current="SAR"
 
		Button: 
			text: "File a Mission Report" 
			size_hint: .1, .1 
			on_release: app.root.current="Map"
<Map>: 
	name: "Map" 	   
	AnchorLayout:  
	MapView:
		lat: 60.4297201
		lon: -159.156797
		zoom: 7 
		double_tap_zoom: True
		on_lat: 
			print('lat', self.lat)
			print('lat', self.lon)  
		MapMarkerPopup: 
			lat: 59.755094
			lon: -161.845367
	BoxLayout:
		Button: 
			text: "Save Search Grid" 
			text_size: self.size 
			size_hint: .2, .2
			font_size: '25sp'
			markup: True
			on_release: 
				print("I have been clicked!")	
		Button: 
			text: "Home" 
			text_size: self.size
			size_hint: .2, .2
			font_size: '25sp'
			markup: True
			on_release: app.root.current= 'MainPage' 

<Weather>: 
	name: "Weather" 
	BoxLayout: 
	MapView:
		lat: 60.4297201
		lon: -159.156797
		zoom: 7 
		double_tap_zoom: True
		on_lat: 
			print('lat', self.lat)
			print('lat', self.lon)  
		
<SAR>: 
	name: "SAR" 	   
	BoxLayout: 
		orientation: "vertical" 
		BoxLayout:	
			Button: 
				text: "reset"
			Button: 
				text: "load"  
		BoxLayout:
			FileChooserIconView: 	
				id: filechooser
		BoxLayout:
			Button: 
				text: "Home" 
				text_size: self.size
				size_hint: .2, .2
				font_size: '25sp'
				markup: True
				on_release: app.root.current= 'MainPage'
